<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean  id="emd" class="hht.emd.EmpiricalModeDecomposition" >
		<constructor-arg  ref="sifter"/>
		<constructor-arg ref="extremesLocator"/>
		<property name="counter" ref="counter"/>
	</bean>
	
	<bean id="counter" class="hht.emd.sifting.IterationCounter">
		<property name="max" value="3"/>
	</bean>

	<bean id="extremesLocator" class="hht.emd.sifting.extremes.locators.LocateLocalExtremaFacade" >
		<constructor-arg ref="maxLocator" />
		<constructor-arg ref="minLocator" />
	</bean>	

	<bean id="minLocator" class="hht.emd.sifting.extremes.locators.MinimumFinder">
	</bean>

	<bean id="maxLocator" class="hht.emd.sifting.extremes.locators.MaximumFinder">
	</bean>	
	
	<bean id="sifter" class="hht.emd.sifting.Sifter">
		<constructor-arg ref="Or1"/>
		<constructor-arg ref="ZeroEstimator"/>
		<constructor-arg ref="extremesLocator" />
	</bean>
	
	<bean id="ZeroEstimator" class="hht.emd.sifting.extremes.estimators.ZeroPoints"/>
	
	<bean id="Or1" class="hht.emd.sifting.stoppingCriteria.Or">
		<property name="criteria">
			<list>
				<ref bean="Mean" />
				<ref bean="StandardDeviation" />
				<ref bean="MeanStandardDeviation" />
			</list>
		</property>
	</bean>
	
	<bean id="Mean" class="hht.emd.sifting.stoppingCriteria.Mean">
		<property name="meanThreshold" value="0.02" />
	</bean>
	
	<bean id="StandardDeviation" class="hht.emd.sifting.stoppingCriteria.StandardDeviation">
		<property name="deviationThreshold" value="0.2" />
	</bean>
	
	<bean id="MeanStandardDeviation" class="hht.emd.sifting.stoppingCriteria.MeanStandardDeviation">
		<property name="standardDeviationThreshold" value="0.5" />
	</bean>

	<bean id="ResultsConfigs" class="data.ResultsConfigs">
		<property name="genPdfFromImfs" value="false"/>
		<property name="genPdfFromImfsMaps" value="false"/>
		<property name="genImfsAllMapPdf" value="false"/>
		<property name="genImfMapToSignalPdf" value="false"/>
	</bean>
</beans>


